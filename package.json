{
  "name": "root",
  "license": "UNLICENSED",
  "scripts": {
    "update": "yarn upgrade-interactive",
    "audit": "yarn npm audit -A -R --environment production --severity moderate",
    "format": "prettier --write \"**/src/**/*.{ts,tsx}\" \"**/test/**/*.ts\"",
    "lint": "eslint \"**/{src,test}/**/*.{ts,tsx}\" --fix",
    "dev:admin_ui": "yarn workspace @client/admin start",
    "build:admin_ui": "yarn workspaces foreach --all -tR --from '@client/admin' -R run build"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jiti": "2.6.1",
    "prettier": "3.7.4",
    "stylelint": "16.26.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-prettier": "5.0.3",
    "typescript": "5.9.3"
  },
  "resolutions": {
    "@babel/runtime": ">=7.26.10"
  },
  "workspaces": [
    "clients/**/*",
    "helpers/*",
    "library/*",
    "pages/**/*",
    "utils/**/*",
    "widgets/**/*",
    "layouts/**/*"
  ],
  "engines": {
    "node": "^22"
  },
  "packageManager": "yarn@3.6.1"
}
