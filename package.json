{
  "name": "root",
  "license": "UNLICENSED",
  "scripts": {
    "update": "yarn upgrade-interactive",
    "format": "prettier --write \"**/src/**/*.{ts,tsx}\" \"**/test/**/*.ts\" \"**/prisma/**/*.ts\"",
    "lint": "eslint \"**/{src,test}/**/*.{ts,tsx}\" --fix",
    "dev:admin_ui": "yarn workspace @client/admin start",
    "build:admin_ui": "yarn workspaces foreach --all -tR --from '@client/admin' -R run build"
  },
  "devDependencies": {
    "@eslint/js": "9.32.0",
    "@types/node": "22.16.5",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.3",
    "prettier": "3.6.2",
    "typescript": "5.8.3"
  },
  "workspaces": [
    "clients/**/*",
    "helpers/*",
    "library/*",
    "pages/**/*",
    "utils/**/*",
    "widgets/**/*",
    "layouts/**/*"
  ],
  "engines": {
    "node": "^22"
  },
  "packageManager": "yarn@3.6.1"
}
